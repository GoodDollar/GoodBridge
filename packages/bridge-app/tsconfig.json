{
  "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true      
  },
  "include": [
      "src/**/*",
      "__tests__/**/*"
  ]
}
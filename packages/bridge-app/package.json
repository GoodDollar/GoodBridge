{
  "name": "@gooddollar/bridge-app",
  "version": "1.4.4",
  "description": "Minimalistic bridge",
  "engines": {
    "node": ">= 16"
  },
  "index": "dist/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "Dockerfile",
    "types"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^10.0.1",
    "@types/node": "~16",
    "@typescript-eslint/eslint-plugin": "~5.26",
    "@typescript-eslint/parser": "~5.26",
    "@vercel/ncc": "^0.36.1",
    "ctix": "^1.4.0",
    "eslint": "~8.16",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~26.2",
    "jest": "^29.1.1",
    "prettier": "~2.6",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "tslib": "~2.4",
    "tsutils": "~3.21",
    "typescript": "~4.7"
  },
  "scripts": {
    "start": "node dist/src/main.js",
    "clean": "rm -fr dist && rm -fr types && ctix r",
    "prebuild": "yarn clean && yarn lint && yarn build:copyabi",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:copyabi": "find ../bridge-contracts/artifacts/contracts/ -iregex '.*/[a-z]*.json' -exec cp \"{}\" ./src/abi/ \\;",
    "build:release": "yarn clean && ctix c && tsc -p tsconfig.release.json && TS_NODE_PROJECT=./tsconfig.release.json ncc build src/index.ts -o distDocker",
    "lint": "eslint src --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch",
    "prepack": "yarn prebuild && yarn build:release",
    "postpublish": "./dockerpublish.sh"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "eth-proof": "^2.1.6",
    "ethers": "^5.*",
    "ethers-multicall": "^0.2.3",
    "js-logger": "^1.6.1",
    "lodash": "^4.17.21",
    "node-fetch": "2",
    "p-all": "3.0.0"
  }
}
